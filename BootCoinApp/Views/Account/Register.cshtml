@using BootCoinApp.ViewModels
@model RegisterViewModel
@{
    Layout = "_LayoutAccount";
    ViewData["title"] = "Register";
}

<div class="left-section custom-bg h-100 position-absolute"></div>
<div class="account-card card py-3 position-absolute translate-middle-y">
    <div class="card-body">
        <h2 class="text-warning">Logo Here</h2>
        <p>Welcome to Bootcoin Application</p>
        <h1>@ViewData["title"]</h1>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-4">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control bg-light" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control bg-light" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control bg-light" aria-required="true" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control bg-light" aria-required="true" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group my-4 w-25 mx-auto">
                <button class="btn btn-success w-100" type="submit">Register</button>
            </div>
            <span>
                already have an account?
                <a asp-controller="Account" asp-action="Login">Login Here</a>
            </span>
                </form>
    </div>

</div>