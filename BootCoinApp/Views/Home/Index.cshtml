@using BootCoinApp.ViewModels
@model IndexHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div>
    @if (User.IsInRole("admin"))
    {
       <h5>USER SUMMARY</h5>
       <span>@Model.usersCount Interns</span>
    }
    else
    {
        <h5>You Have @Model.currentUser.BootCoin Bootcoins!</h5>
    }
    <h5>Check Other Interns Bootcoins!</h5>
    <a asp-controller="Admin" asp-action="Input">Input</a>
    <div class="row container">
        <div class="col-md-5"> Name </div>
        <div class="col-md-2"> Bootcoins </div>
        <div class="col-md-4"> Position </div>
        <div class="col-md-1"> Group </div>
    </div>
    <div class="row container overflow-auto" style="height : 60vh;">
        @foreach(var user in Model.users)
        {
            @if(!string.Equals(user.Id, Model.currentUser.Id) && user.PositionId != 1)
            {
                @*<div class="col-md-1"> <img alt="user image"/> </div>*@
                <div class="col-md-5 mb-1">
                    <svg class="p-0" style="width : 40px; height:auto;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                    </svg>
                    <div class="d-inline-block"> @user.UserName </div>
                </div>
                <div class="col-md-2 mb-1"> @user.BootCoin </div>
                <div class="col-md-4 mb-1"> @user.Position.PositionName </div>
                <div class="col-md-1 mb-1"> @user.Group.GroupName </div>
                <hr />
            }
        }
    </div>
</div>
